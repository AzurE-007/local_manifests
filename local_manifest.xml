<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="sm8150"
          fetch="https://github.com/xiaomi-sm8150-devs" />

  <remote name="par"
          fetch="https://github.com/paranoid-raphael" />
  
  <remote name="rdy"
          revision="tm-qpr2"
          fetch="https://github.com/RandomDumpYard" />

  <remote name="stx"
          fetch="https://github.com/StatiXOS" />

  <!-- Trees -->
        <project name="proprietary_vendor_xiaomi_sm8150-common" path="vendor/xiaomi/sm8150-common" remote="sm8150" revision="lineage-20" />
        <project name="proprietary_vendor_xiaomi_raphael" path="vendor/xiaomi/raphael" remote="sm8150" revision="lineage-20" />
  
  <!-- Build -->
        <project path="build/make" name="android_build" remote="rdy" groups="pdk" >
          <copyfile src="core/root.mk" dest="Makefile" />
          <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
          <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
          <linkfile src="core" dest="build/core" />
          <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
          <linkfile src="target" dest="build/target" />
          <linkfile src="tools" dest="build/tools" />
        </project>
        <project path="build/soong" name="android_build_soong" remote="rdy" groups="pdk,tradefed" >
          <linkfile src="root.bp" dest="Android.bp" />
          <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
        </project>
  
  <!-- Vendor -->
        <project path="vendor/statix" name="android_vendor_statix" remote="rdy">
          <linkfile src="build/stop_scan.mk" dest="kernel/Android.mk" />
        </project>

  <!-- Kernel Headers -->
        <remove-project name="android_hardware_qcom-caf_kernel-headers" />
        <project path="hardware/qcom-caf/kernel-headers" name="android_hardware_qcom-caf_kernel-headers" remote="par" revision="tm-caf">
          <!-- Add guards for CAF repositories. -->
          <linkfile src="msm-4.4" dest="hardware/qcom-caf/msm8998/kernel-headers" />
          <linkfile src="msm-4.14" dest="hardware/qcom-caf/sm8150/kernel-headers" />
          <linkfile src="msm-4.19" dest="hardware/qcom-caf/sm8250/kernel-headers" />
          <linkfile src="msm-5.4" dest="hardware/qcom-caf/sm8350/kernel-headers" />
          <linkfile src="msm-5.10" dest="hardware/qcom-caf/sm8450/kernel-headers" />
        </project>
  
  <!-- HAL's -->
        <remove-project name="android_hardware_qcom_display" />
        <project path="hardware/qcom-caf/sm8150/display" name="android_hardware_qcom_display" remote="par" revision="tm-caf-sm8150" />

  <!-- Hardware Trees -->
        <project name="android_vendor_hardware_xiaomi" path="vendor/hardware/xiaomi" remote="stx" revision="tm" />

</manifest>
